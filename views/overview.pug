extends base

block content
  .container
    .row.margin-search
      .col
        form.form-inline.form-search-resort.float-r
          .form__group.mx-sm-3.mb-2
            label.form__label(for='name' class='sr-only') Search
            input#name.form__input(type='text' placeholder='Resort Name' name='name')
          button.btn.btn-success.mb-2(type='submit') Search
    .row.margin-content
      each resort in resorts
        .col-12.col-md-6.col-lg-4
          .card
            .card__header
              .card__picture
                img.card__picture-img(src=`/img/resorts/${resort.imageCover}` alt=`${resort.name}`)
              
              h3.heading-tertirary
                span= resort.name
            
            .card__details
              h4.card__sub-heading Opens Monday to Sunday
              p.card__text= resort.summary
              
              .card__data
                svg.card__icon
                  use(xlink:href='/img/icons.svg#icon-map-pin')
                - const locArr = resort.address.split(',');
                - const location = `${locArr[locArr.length - 2]}, ${locArr[locArr.length - 1]}`;
                span= location
              .card__data
                svg.card__icon
                  use(xlink:href='/img/icons.svg#icon-phone')
                span= resort.contactNumbers[0]
            
            .card__footer
              p
                span.card__footer-value= `PHP ${resort.price[0]}.00`
                | 
                span.card__footer-text Adult

              p.card__ratings
                span.card__footer-value= `PHP ${resort.price[1]}.00`
                | 
                span.card__footer-text Kids
              
              a.btn.btn--green.btn--small(href=`/resort/${resort.slug}`) Details
